{
  "name": "@shopgate/pwa-common",
  "version": "1.0.11",
  "description": "Shopgate's common library for PWAs",
  "repository": "shopgate/pwa-common",
  "bugs": "https://github.com/shopgate/pwa-common/issues",
  "homepage": "https://github.com/shopgate/pwa-common",
  "license": "Apache-2.0",
  "scripts": {
    "lint": "eslint --parser babel-eslint --ignore-path .gitignore --ignore-path .eslintignore  --ext .js --ext .jsx .",
    "precommit": "lint-staged",
    "test": "jest",
    "test:watch": "jest --watch",
    "coverage": "jest --coverage",
    "prebuild": "rimraf ./dist",
    "build": "NODE_ENV=production babel ./ --out-dir ./dist --ignore tests,spec.js,spec.jsx,__snapshots__,.eslintrc.js,jest.config.js,dist,coverage,node_modules",
    "postbuild": "cp ./*.json ./dist/ && cp ./*.md ./dist/",
    "version": "npm run build",
    "postversion": "git push && git push --tags && cd dist && npm publish --access public"
  },
  "lint-staged": {
    "concurrent": false,
    "linters": {
      "*.js": "eslint --parser babel-eslint --ignore-path .gitignore --ignore-path .eslintignore  --ext .js --ext .jsx ."
    }
  },
  "pre-commit": [
    "precommit"
  ],
  "dependencies": {
    "classnames": "^2.2.5",
    "crypto-js": "3.1.9-1",
    "glamor": "^2.20.40",
    "gsap": "^1.20.2",
    "history": "^4.7.2",
    "intl-messageformat": "^2.1.0",
    "jsdom": "11.1.0",
    "path-match": "^1.2.4",
    "react-dotdotdot": "^1.1.0",
    "react-hot-loader": "^3.0.0-beta.6",
    "react-id-swiper": "1.4.0",
    "react-inline-transition-group": "^2.1.7",
    "react-portal": "^3.1.0",
    "react-redux": "^5.0.6",
    "react-tap-event-plugin": "^2.0.1",
    "recompose": "^0.26.0",
    "redux": "^3.7.2",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.2.0",
    "remote-redux-devtools": "^0.5.12",
    "reselect": "^3.0.1",
    "rxjs": "^5.4.3",
    "url-search-params": "^0.10.0"
  },
  "devDependencies": {
    "@shopgate/eslint-config": "^1.0.2",
    "@shopgate/pwa-core": "^1.0.4",
    "@shopgate/pwa-unit-test": "^1.2.5",
    "@shopgate/react-hammerjs": "^0.5.3",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-plugin-react-transform": "^3.0.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-react-inline-elements": "^6.22.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-runtime": "^6.26.0",
    "coveralls": "^3.0.0",
    "lint-staged": "^4.2.3",
    "lodash": "^4.17.4",
    "pre-commit": "^1.2.2",
    "prop-types": "^15.6.0",
    "react": "^15.6.2",
    "react-dom": "^15.6.2",
    "react-transform-catch-errors": "^1.0.2",
    "redbox-react": "^1.5.0",
    "rimraf": "^2.6.2"
  },
  "peerDependencies": {
    "react": "15.x",
    "react-dom": "15.x",
    "prop-types": "15.x",
    "lodash": "4.x",
    "@shopgate/react-hammerjs": "0.5.x",
    "@shopgate/pwa-core": "1.0.x"
  }
}
